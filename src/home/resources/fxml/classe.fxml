           xmlns="http://javafx.com/javafx/8.0.171" fx:controller="home.controllers.ClassController">
    <VBox fx:id="ClassHome" prefHeight="755.0" prefWidth="1245.0">
        <HBox alignment="CENTER_LEFT" spacing="20.0">
