        <HBox prefHeight="72.0" prefWidth="1186.0">
            <Label prefHeight="66.0" prefWidth="204.0" styleClass="field" text="                الأقسام      ">
                <font>
                    <Font name="Arabic Typesetting" size="24.0"/>
                </font>
            </Label>
            <Label prefHeight="59.0" prefWidth="120.0"/>
