            <Label prefHeight="17.0" prefWidth="66.0"/>
            <JFXButton fx:id="edit" onAction="#editClass" prefHeight="59.0" prefWidth="173.0" styleClass="btn-view"
                       stylesheets="@../css/eleve.css" text="تعديل بيانات القسم"/>
            <Label prefHeight="17.0" prefWidth="66.0"/>
            <JFXButton fx:id="remove" onAction="#removeClass" prefHeight="59.0" prefWidth="173.0" styleClass="btn-view"
                       stylesheets="@../css/eleve.css" text="خذف القسم"/>
            <Label prefHeight="17.0" prefWidth="66.0"/>
            <EmojiOneView fx:id="print" fill="#2196f3" glyphName="PRINTER" onMouseClicked="#printClass" size="50"
                          styleClass="printer"/>
