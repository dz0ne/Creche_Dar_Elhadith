            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <MaterialDesignIconView fill="#2196f3" glyphName="SCHOOL" size="50" wrappingWidth="47.0"/>
            <Label prefHeight="97.0" prefWidth="315.0" styleClass="title-header" text="إدارة الأقسام"
                   textFill="#253ebc">
                <font>
                    <Font name="Arabic Typesetting" size="45.0"/>
                </font>
            </Label>
        </HBox>
        <HBox prefHeight="46.0" prefWidth="1189.0">
            <Label prefHeight="54.0" prefWidth="280.0"/>
            <JFXButton fx:id="cree" onAction="#creeClass" prefHeight="59.0" prefWidth="173.0" styleClass="btn-view"
